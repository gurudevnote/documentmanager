{% extends('::admin.html.twig') %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Users</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Enabled</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}

                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}">{{ user.username }}</a></td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.enabled }}</td>
                    <td>action</td>
                </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}