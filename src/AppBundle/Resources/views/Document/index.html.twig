{% extends 'base.html.twig' %}
{% form_theme uploadForm '@App/Form/form_layout.html.twig'  %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {{ form(uploadForm, {attr:{class:'form-inline', novalidate: 'novalidate'}}) }}
            <table class="table table-hover">
                <thead>
                <tr>
                    <th width="400">File name</th>
                    <th width="100">
                        <div class="dropdown">
                            <a href="javascript:void(0);" data-target="#" class="dropdown-toggle" data-toggle="dropdown">Author <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="javascript:void(0);" onclick="filterDocuments('all')">All</a></li>
                                {% for author in authors %}
                                <li><a href="javascript:void(0);" onclick="filterDocuments('{{ author.username }}')">{{ author.username }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </th>
                    <th>
                        <div class="dropdown">
                            <a href="javascript:void(0);" data-target="#" class="dropdown-toggle" data-toggle="dropdown">Folder <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="javascript:void(0);" onclick="filterDocuments('all')">All</a></li>
                                {% for folder in folders %}
                                    <li><a href="javascript:void(0);" onclick="filterDocuments('{{ folder.name }}')">{{ folder.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </th>
                    <th>Type</th>
                    <th>Upload date</th>
                    <th>Last modified</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td colspan="6"><h4>My documents ({{ documents | length }})</h4></td>
                </tr>
                {% for document in documents  %}
                {% set defaultClass = '' %}
                {% if document.shared%}
                    {% set defaultClass = 'success' %}
                {% endif %}
                <tr class="document-row {{ defaultClass }}">
                    <td>{{document.filename}}</td>
                    <td class="document-username">{{document.user.username}}</td>
                    <td class="document-folder">{{document.folder.name}}</td>
                    <td>{{document.type}}</td>
                    <td>{{document.uploadDate | date('Y-m-d')}}</td>
                    <td>{{document.lastModified | date('Y-m-d H:i:s')}}</td>
                    <td>
                        <div class="dropdown">
                            <span class="glyphicon glyphicon-option-vertical" type="button" id="dropdownMenu1" data-toggle="dropdown"></span>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a href="#">Download</a></li>
                                <li><a href="{{ path('document_sharing', {'id': document.id}) }}" class="btn-share">Share</a></li>
                                <li><a href="#">Rename</a></li>
                                <li><a href="{{ path('remove_document', {'id': document.id}) }}">Remove</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                {% endfor %}
                <tr>
                    <td colspan="6"><h4>Sharing with me ({{ app.user.sharingDocuments | length }})</h4></td>
                </tr>
                {% for document in app.user.sharingDocuments  %}
                    <tr class="document-row">
                        <td>{{document.filename}}</td>
                        <td class="document-username">{{document.user.username}}</td>
                        <td class="document-folder">{{document.folder.name}}</td>
                        <td>{{document.type}}</td>
                        <td>{{document.uploadDate | date('Y-m-d')}}</td>
                        <td>{{document.lastModified | date('Y-m-d H:i:s')}}</td>
                        <td>
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>

    <!-- Modal -->

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/app/css/colorbox.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'bundles/app/js/document.js'
        'bundles/app/js/jquery.colorbox-min.js'
        output='js/complied/document.js'
    %}
    <script src="{{ asset_url }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('.btn-share').colorbox({'width': '600px'});
        })
    </script>
    {% endjavascripts %}
{% endblock %}
