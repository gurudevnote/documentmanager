<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">


        {% stylesheets
            'bundles/fosuseroverride/css/bootstrap.min.css'
            'bundles/fosuseroverride/css/main.css'
            filter='cssrewrite'
        %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {{ render(controller('AppBundle:Default:menu')) }}
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            {% javascripts
                'bundles/fosuseroverride/js/main_jquery-1.10.2.min_1.js'
                'bundles/fosuseroverride/js/main_bootstrap.min_2.js'
                output='js/compiled/main-front.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
