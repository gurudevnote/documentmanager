<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}Document management{% endblock %}</title>

        {% stylesheets
        'bundles/admin/plugin/bootstrap/dist/css/bootstrap.min.css'
        'bundles/admin/plugin/metisMenu/dist/metisMenu.min.css'
        'bundles/admin/css/timeline.css'
        'bundles/admin/css/sb-admin-2.css'
        'bundles/admin/plugin/morrisjs/morris.css'
        'bundles/admin/plugin/font-awesome/css/font-awesome.min.css'
        'bundles/app/css/main.css'
        filter='cssrewrite'
        %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('admin_homepage') }}">Docs Management</a>
            </div>
            <!-- /.navbar-header -->



            <ul class="nav navbar-top-links navbar-right">
                {{ knp_menu_render('AppBundle:Builder:rightMenu',  {'template': 'AppBundle:Menu:knp_menu.html.twig', 'currentClass' : 'active'}) }}
            </ul>
            <!-- /.navbar-top-links -->

            {{ render(controller('AppBundle:Default:menu')) }}
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12" style="margin-top: 10px;">
                    {% if app.session.flashbag.has('success') %}
                        <div class="alert alert-warning alert-dismissable" style="margin-bottom: 10px;">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                            {% for msg in app.session.flashbag.get('success') %}
                                {{ msg }}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            {% block body %}{% endblock %}
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    {% javascripts
    'bundles/admin/plugin/jquery/dist/jquery.min.js'
    'bundles/admin/plugin/bootstrap/dist/js/bootstrap.min.js'
    '//raw.githubusercontent.com/thinh2010/metisMenu/master/dist/metisMenu.js'
    'bundles/admin/plugin/raphael/raphael-min.js'
    'bundles/admin/js/sb-admin-2.js'
    output='js/compiled/main-admin.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    </body>
</html>
